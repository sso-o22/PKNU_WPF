<Window x:Class="wf02_simplecontrols.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wf02_simplecontrols"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="250">
    <StackPanel>
        <TextBlock Text="텍스트블럭" Width="100"/>
        <Label Content="라벨영역" Width="100"/>
        <TextBox Text="텍스트블럭" Width="100"/>
        <PasswordBox Password="패스워드박스" Width="100"/>
        <Slider x:Name="SldStep" Value="0" Width="100" ValueChanged="SldStep_ValueChanged" />
        <ProgressBar x:Name="PgbStep" Value="0" Width="100" Height="15" Maximum="10"/>

        <Image Source="Resources/xaml.png" Height="32"/>
        <MediaElement Source="Resources/video.mp4" Width="200" Height="100" LoadedBehavior="Play"/>
    </StackPanel>
</Window>